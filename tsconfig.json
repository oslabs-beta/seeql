{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "react",
      "webpack-env",
      "jest",
      "node",
      "electron",
      "pg"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
