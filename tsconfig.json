{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "types": [
      "webpack-env",
      "mocha",
      "jest",
      "node",
      "electron",
      "styled-components"
    ],
    "typeRoots": ["node_modules/@types"],
    "lib": ["es6", "dom"]
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist"]
}
